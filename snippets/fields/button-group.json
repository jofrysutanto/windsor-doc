{
	"label": "Field: Button Group",
	"description": "Allow user to select one value from button group",
	"body": [
		"${1:my_field}:",
		"\tlabel: ${1/([a-z]*)_*([a-z]*)/${1:/capitalize} ${2:/capitalize}/g}",
		"\ttype: \"button_group\"",
		"\tlayout: horizontal",
		"\treturn_format: value",
		"\tchoices:",
		"\t\t${2:value}: ${3:'Label'}",
		"\t\t${0}"
	]
}
